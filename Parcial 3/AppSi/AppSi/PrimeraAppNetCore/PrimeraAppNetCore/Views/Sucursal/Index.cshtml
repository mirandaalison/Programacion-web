@{
    ViewData["Title"] = "Sucursales";
}

<h1>Sucursales</h1>

<div class="input-group mb-3">
    <form id="formBuscar" method="post" class="row g-3 m-3">
        <div class="col">
            <input type="text" name="nombre" class="form-control" placeholder="Nombre">
        </div>
        <div class="col">
            <input type="text" name="direccion" class="form-control" placeholder="Dirección">
        </div>
    </form>
    <div class="row g-3 m-3">
        <button type="submit" class="btn btn-primary col m-3" onclick="buscar()">Buscar</button>
        <button type="submit" class="btn btn-danger col m-3" onclick="limpiar()">Limpiar</button>
    </div>
</div>

<div id="divtabla"></div>

<script src="~/js/generic.js"></script>
<script src="~/js/sucursal.js"></script>